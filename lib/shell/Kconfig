menuconfig PYRINAS_AT_SHELL
	bool "AT Shell"
	depends on NRF_MODEM_LIB
	depends on SHELL
	help
	  Adds the AT command capability to shell. The shell command is called
	  "at" and will interpret arguments as AT commands, and print back the
	  response from the modem.

if PYRINAS_AT_SHELL

config AT_SHELL_CMD_RESPONSE_MAX_LEN
	int "Maximum AT command response length"
	default 2700

endif # PYRINAS_AT_SHELL

menuconfig PYRINAS_CREDENTIALS_SHELL
	bool "Credentials shell."
	depends on SETTINGS
	depends on SHELL
	help
	  Adds the ability to set TLS credentials via shell.

menuconfig PYRINAS_SETTINGS_SHELL
	bool "Settings Shell"
	depends on SETTINGS
	depends on SHELL
	help
	  Adds the ability to set settings via shell.
